EPATH="."
echo Installing the exercise
sudo apt-get update 
debconf-set-selections <<< 'mysql-server-8.0 mysql-server/root_password password 26x0vVe71B8qY0jbMKDz1mc7UnAYhXkX'
debconf-set-selections <<< 'mysql-server-8.0 mysql-server/root_password_again password 26x0vVe71B8qY0jbMKDz1mc7UnAYhXkX'
sudo apt-get install lamp-server^ -y
sudo cp $EPATH/*.php /var/www/html
sudo rm /var/www/html/index.html
sudo cat $EPATH/httpd.conf >> /etc/apache2/httpd.conf
sudo /etc/init.d/apache2 restart
sudo mysql -u"root" -p"26x0vVe71B8qY0jbMKDz1mc7UnAYhXkX" < $EPATH/setup.sql
